<div class="comment-body">
	<p><%=comment.body%> - <span class="comment-user"><%= comment.user.name %></span> <span class="comment-time"><%= comment.created_at.strftime("%b %-d`%y at %H:%M") %></span></p>
	<% if current_user %>
		<% if current_user.id == comment.user.id %>
			<%= link_to 'Edit', "/comments/#{comment.id}/edit", :class => "pull-left" %>
			<%= link_to 'Delete', "/comments/#{comment.id}/delete", :method => :delete,:class => "pull-left", :style => "margin-left: 10px;" %>
		<% end %>
	<% end %>
	<br>
	<br>	
	<%= @current_item %>
</div>