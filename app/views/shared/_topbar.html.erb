<nav class="navbar navbar-expand-lg fixed-top navbar-light bg-light">
  <a class="navbar-brand" href="#">
    <%= image_tag("logo.png", :width => "150", :height => "40") %>
  </a>
  <%= form_tag(questions_path, method: :get, :class => "form-inline") do %>
    
    <%= hidden_field_tag :filter, "search" %>
    <%= hidden_field_tag :sort, params[:sort] %>
    <%= hidden_field_tag :direction, params[:direction] %>

    <div class="input-group input-group-sm ">
      <%= text_field_tag(:search_txt, @search_txt, :class => "form-control", :placeholder => "Search") %>
      <div class="input-group-append">
        <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i></button>
      </div>
    </div>
  <% end %>		
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <% if user_signed_in? %> 
        <li style="margin-top: 10px;">
          <p><%= current_user.name %></p>
        </li>
        <li style="margin-top: 10px;">
          <%= image_tag current_user.avatar.url(:thumb), class: "pull-left", style: "margin-right: 20px;" %>
        </li>
        <li class="nav-item" style="margin-top: 10px;">
        <%= button_to('Logout', destroy_user_session_path, method: :delete, class: 'btn btn-sm btn-primary')%>
        </li>
      <% else %>
        <li class="nav-item">
          <a href="<%= new_user_session_path %>">Log In</a>
        </li>
        <li class="nav-item">
          <%= button_to('Sign up', new_user_registration_path, method: :get, class: 'btn btn-sm btn-primary')%>
        </li>
      <% end %>
    </ul>
  </div>
</nav>